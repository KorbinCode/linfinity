{

    "manifest_version": 2,
    "name": "Linfinity",
    "version": "0.1.0",

    "description": "To Linfinity! And Beyond!",
    "icons": {
        "32": "icons/32.png",
        "64": "icons/64.png",
        "96": "icons/96.png",
        "128": "icons/128.png"
    },

    "applications": {
        "gecko": {
            "id": "linfinity@nd.beyond",
            "strict_min_version": "46.0"
        }
    },

    "background": {
        "scripts": ["background.js"]
    },

    "web_accessible_resources": [
        "linfinity.html"
    ],

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "32": "icons/32.png",
            "64": "icons/64.png",
            "96": "icons/96.png",
            "128": "icons/128.png"
        },
        "default_title": "Linfinity"
    }
}
